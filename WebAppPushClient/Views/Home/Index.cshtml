		function toClipboard(text) {
			const tmp = document.createElement('textarea');
			tmp.hidden = true;
			tmp.value = text;
			window.document.body.appendChild(tmp);
			tmp.select();
			window.document.execCommand("copy");
			alert("Copied the text: " + text);
			window.document.body.removeChild(tmp);
		}
	</script>
